<div class="container">
  <% @cars.each do |car| %>
    <div class="row mb-3">
      <div class="col-3"></div>
      <div class="col-9">
        <div class="row">
          <div class="col-9">
            <div class="card-product">
              <%= image_tag url_for(car.photo) if car.photo.attached? %>
              <div class="card-product-infos">
                <h2><%= car.brand %></h2>
              </div>
            </div>
          </div>
          <div class="col-3 align-self-center">
            <div class="my-button">
              <%= link_to "View Car", car_path(car), class: "btn btn-flat" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
